generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notebook {
  id        String   @id @default(uuid())
  title     String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Document {
  id          String   @id @default(uuid())
  notebookId  String
  userId      String
  filename    String
  content     String   @db.Text
  createdAt   DateTime @default(now())

  @@index([notebookId])
  @@index([userId])
}